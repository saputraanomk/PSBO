<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kusuma.test1.MainActivity">

    <Button
        android:text="Login dengan Gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <TextView
        android:text=" Lari Njing ! "
        android:id="@+id/jogging"
        android:allowUndo="false"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="298dp"
        android:ems="10"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="  E-mail"
        android:selectAllOnFocus="true"
        android:background="@android:drawable/editbox_background"
        android:layout_weight="0.05"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="298dp"
        android:ems="10"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint=" Password"
        android:background="@android:drawable/editbox_background"
        android:layout_weight="0.11"
        android:layout_height="40dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/submit"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Register"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/email"
        android:textColor="?attr/actionModeSplitBackground" />

    <Button
        android:text="Submit"
        android:layout_width="195dp"
        android:layout_height="38dp"
        android:id="@+id/submit"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="103dp"
        android:layout_above="@+id/gmail"
        android:layout_alignRight="@+id/jogging"
        android:layout_alignEnd="@+id/jogging" />

    <Button
        android:text="Log in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gmail"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
